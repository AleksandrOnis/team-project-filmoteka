{{#each this}}
<li class="item gallery-item">
    {{#if poster_path}}
    <img src="https://image.tmdb.org/t/p/w300{{poster_path}}" class='gallery-item_image' alt="{{title}} poster" />
    {{else}}
    <img class='film-list__image' src='https://i.ibb.co/8mnHvb2/no-poster.jpg' alt='no_poster' />
    {{/if}}
    <div class="gallery-item_text">
        <p class="gallery-item_title title">{{title}}</p>
        <ul class='gallery-item_genres-list'>
            {{#each genres}}
            <li class='gallery-item_genres-item'>{{name}}{{#unless @last}},{{/unless}}</li>
            {{/each}}
        <p class="gallery-item_year"><span class='gallery-item_delimeter'>|</span>{{year}}</p>
        <p class="gallery-item_rating">{{vote_average}}</p>
    </div>
</li>
{{/each}}



