{{#each this}}

<li class="item gallery-item item-watched">
    <div class='card-thumb'>
    <img src="https://image.tmdb.org/t/p/w300{{poster_path}}" class='gallery-item_image' alt="{{title}} poster" data-id="{{id}}"/>
    <div class="gallery-item_text">
        <p class="gallery-item_title  gallery-item_title-watched title" data-id="{{id}}">{{title}}</p>
        <ul class='gallery-item_genres-list'>
            {{#each genres}}
            <li class='gallery-item_genres-item'>{{name}}{{#unless @last}},{{/unless}}</li>
            {{/each}}
            <p class="gallery-item_year"><span class='gallery-item_delimeter'>|</span>{{year}}</p>
            <span class='gallery-item_rating'>{{vote_average}}</span>
    </div>
    </div>
</li>

{{/each}}